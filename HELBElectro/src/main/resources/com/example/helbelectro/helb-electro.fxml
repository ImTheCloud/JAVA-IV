   <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
   <VBox spacing="10">

      <HBox style="-fx-border-color: white; -fx-border-width: 2px; -fx-padding: 10px; -fx-background-color: #626786;">
         <Label text="Opti : " textFill="WHITE">
            <font>
               <Font size="20.0" />
            </font></Label>
         <ComboBox fx:id="cb_opti" value="Diverse">
            <items>
               <FXCollections fx:factory="observableArrayList">
                  <String fx:value="Cost" />
                  <String fx:value="Time" />
                  <String fx:value="Score" />
                  <String fx:value="Diverse" />
               </FXCollections>
            </items>
         </ComboBox>
      </HBox>

      <Button fx:id="helb"  onAction="#onStartClick" alignment="CENTER" prefHeight="6.0" prefWidth="200.0"
              text="Start production of components" style="-fx-background-color: #3AA852;"
              textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font size="12.0" />
         </font>
      </Button>

      <VBox fx:id="areaComponent" spacing="10" style="-fx-border-color: white; -fx-border-width: 2px; -fx-padding: 10px; -fx-background-color: #626786;">


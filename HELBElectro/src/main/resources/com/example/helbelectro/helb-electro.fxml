<HBox alignment="CENTER" prefHeight="538.0" prefWidth="776.0" spacing="20.0" style="-fx-background-color: #282F76; -fx-border-color: white; -fx-border-width: 4px;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.helbelectro.Controller">

   <VBox alignment="CENTER" prefHeight="200.0" prefWidth="500.0" spacing="10">
      <children>
         <Label alignment="CENTER" contentDisplay="CENTER"
                 prefHeight="89.0" prefWidth="327.0" style="-fx-background-color: #626786;
                 -fx-border-color: white; -fx-border-width: 2px;" text="HELBElectro" textAlignment="CENTER" textFill="#fffffff5">
         <font>
            <Font size="40.0" />
         </font></Label>
         <Label alignment="CENTER" prefHeight="25.0" prefWidth="591.0" text="Product Area" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font size="20.0" />
            </font>
         </Label>

         <GridPane fx:id="areaProduct" hgap="20" style="-fx-border-color: white; -fx-border-width: 2px; -fx-background-color: #626786;" vgap="20">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
